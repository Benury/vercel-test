{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "overrides": [{ "files": ["**/*.{js,ts,tsx}"] }],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "max-len": "off",
    "valid-jsdoc": "warn",
    "require-jsdoc": "warn",
    "linebreak-style": "off",
    "no-unused-vars": "warn"
  }
}
