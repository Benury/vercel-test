{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build/dist/src",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "noEmitOnError": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
